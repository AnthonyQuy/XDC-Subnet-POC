FROM node:18-alpine

# Install Python and build dependencies needed for native modules
RUN apk add --no-cache python3 make g++ 

# Set working directory
WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose port for React development server
EXPOSE 3000

# Start the React development server with hot-reloading
CMD ["npm", "start"]
